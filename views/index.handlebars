<main>

    <div class="left-col">
        <h1>Create a New Burger</h1>
        <form id="create-burger">
            <textarea type="text" name="burger" cols="30" rows="1"></textarea>
            <button type="submit">Save Burger!</button>
        </form>

        <h1>Devore the Burger</h1>

        <ul>
            {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/devour-block devoured=true}}
            {{/unless}}
            {{/each}}
        </ul>


    </div>

    <div class="right-col">
        <h1>Your Devoured Burgers</h1>
        <ul>
            {{#each burgers}}
            {{#if devoured}}
            <li>
                {{burger_name}}
            </li>
            {{/if}}
            {{/each}}

        </ul>
    </div>
</main>